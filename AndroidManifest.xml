<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.komponentes.oscomanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.komponentes.oscomanager.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.komponentes.oscomanager.ListaPedidos" 
            android:label="@string/lista_pedidos">
        </activity>
        <activity android:name="com.komponentes.oscomanager.ListaArticulos" 
            android:label="@string/lista_articulos">
        </activity>
        <activity android:name="com.komponentes.oscomanager.Configurar" 
            android:label="@string/configurar">
        </activity>
        <activity android:name="com.komponentes.oscomanager.About" 
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name="com.komponentes.oscomanager.ListaPedidosDetalle" 
            android:label="@string/detalle_lista_pedidos"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.komponentes.oscomanager.Estados" 
            android:label="@string/estados_title"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>
